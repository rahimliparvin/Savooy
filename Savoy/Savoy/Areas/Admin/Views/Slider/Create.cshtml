@model SliderCreateVM
@{
    ViewData["Title"] = "Create";
}


<div style="padding-left:200px" class="container my-5">
    <h1>Create</h1>
    <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">


      

        <div class="form-group my-3">
            <label>Add Title</label>
            <input class="form-control" id="customFile" asp-for="Title">
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>

        <div class="form-group my-3">
            <label>Add CategoryName</label>
            <input class="form-control" id="customFile" asp-for="CategoryName">
            <span class="text-danger" asp-validation-for="CategoryName"></span>
        </div>

        <div class="form-group my-3">
            <label>Add Photo</label>
            <input class="form-control" id="customFile" asp-for="Photo">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
       

        <div class="my-3">
            <button type="submit" class="btn btn-success">Submit</button>
            <a type="button" asp-action="Index" class="btn btn-light">Cancel</a>
        </div>
    </form>
</div>

