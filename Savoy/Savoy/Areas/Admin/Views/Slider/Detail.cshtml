
@model SliderDetailVM
@{
    ViewData["Title"] = "Detail";
}

<div class="container" style="padding-left:200px">

    <div class="form-group my-3">
        <label>TITLE</label>
        <input disabled class="form-control" value="@Model.Title" style="display:block;" />
    </div>
    <div class="form-group  my-3">
        <label>CATEGORYNAME</label>
        <input disabled class="form-control" value="@Model.CategoryName" style="display:block;" />
    </div>
 


    <div class="slider-content" style="display:flex">
        <img style="width:500px;height:400px;margin-right:20px;" src="~/assets/image/@Model.Image" />
    </div>

    <a style=" float: right;" class="btn btn-info my-3" asp-action="Index">Back</a>

</div>

