@using Savoy.ViewModels.Account;
@model ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="col-lg-12">

        <form asp-controller="Account" asp-action="ResetPassword" method="post">
            <div class="login-form">
              
                <div class="row">
                    <div class="col-lg-6">
                        <h4 class="login-title" style="color:lawngreen">Password</h4>


                        <input type="password" asp-for="Password" style="width:310px;height:40px;border-radius:5px;border:1px solid lawngreen ; outline:none"/>
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>

                    <div class="col-lg-6">
                          <h4 class="login-title" style="color:lawngreen;">ConfirmPassword</h4>
                        <input type="password" asp-for="ConfirmPassword" style="width:310px;height:40px;border-radius:5px;border:1px solid lawngreen ; outline:none" />
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                    </div>


                    <div class="col-lg-12 pt-5">
                        <button style="width:100px;height:40px;color:green;background-color:white;border-radius:5px;border:1px solid green" type="submit" class="btn btn-custom-size lg-size btn-pronia-primary">
                            Send
                        </button>

                    </div>

                    <input type="hidden" asp-for="Token" value="@Model.Token" />

                    <input type="hidden" asp-for="UserId" value="@Model.UserId" />


                </div>
            </div>
        </form>
    </div>

</div>