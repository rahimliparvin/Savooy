@model BlogVM

@{
    ViewData["Title"] = "Blog";
}

@section Style{

    <link rel="stylesheet" href="~/assets/scss/pages/blogpage/blogpage.css" />
}

<main>
    <section id="blogpage">
        <div class="container-fluid">
            <div class="col-lg-12">
                <div class="tabmenu">
                    <ul>
                        <li data-id="All" class="item active allCategoriesName">All <span>/</span></li>

                        @foreach (var category in Model.Categories.Take(8))
                        {
                            <li data-id="@category.Id" class="categoriesName">@category.Name<span>/</span></li>
                        }
                       
                    </ul>
                </div>
            </div>
            
            <div class="col-lg-12">

                <div class="content">

                    <partial name="_BlogsPartial" model="@Model.Blogs" />

                </div>

                

            </div>
        </div>
    </section>
</main>


@section Script{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js" integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/assets/js/blog.js"></script>

}